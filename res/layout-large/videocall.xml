<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <FrameLayout
    android:id="@+id/video_frame_capture"
        android:layout_width="129dp"
        android:layout_height="114dp"
        android:layout_gravity="bottom|right" >
    <SurfaceView
        android:id="@+id/video_capture_surface"
        android:layout_width="129dp"
        android:layout_height="114dp"
        android:layout_gravity="bottom|right" >
    </SurfaceView>
</FrameLayout>
    <SurfaceView
        android:id="@+id/video_receive_surface"
        android:layout_width="670dp"
        android:layout_height="match_parent" >
    </SurfaceView>

    <LinearLayout
        android:id="@+id/layouttable"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOcculPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/occult_menu_out" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_terminate_call"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginLeft="5px"
                android:background="@drawable/ic_jog_dial_end_call" />

            <ToggleButton
                android:id="@+id/button_camera"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/camera"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/button_headset"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/headset_button"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/button_mute"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/mute_button"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_bandwidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="--" />

</FrameLayout>